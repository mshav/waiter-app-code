   </head>


  <body>

      <h1>Waiters Selected Days</h1>


    <br>
    <br>
    <br>
    <form class="" action="/days" method="post">


    <div class="container">
      <table class="table">
        <thead>
          <tr>
            <th style="color: #D2691E">Monday</th>
            <th style="color: #4F84C4">Tuesday</th>
            <th style="color: #005960">Wednesday</th>
            <th style="color: #9C9A40">Thursday</th>
            <th style="color: #898E8C">Friday</th>
            <th style="color: #DC4C46">Saturday</th>
            <th style="color: #006E51">Sunday</th>
          </tr>
        </thead>
        <tbody>
          <tr>

            <td class= {{day1Color}}>{{#each day1}}
            <li style="color:white">{{this}}</li>
            {{/each}}</td>
            <td class= {{day2Color}}>{{#each day2}}
            <li style="color:white">{{this}}</li>
            {{/each}}</td>
            <td class= {{day3Color}}>{{#each day3}}
            <li style="color:white">{{this}}</li>
            {{/each}}</td>
            <td class= {{day4Color}}>{{#each day4}}
            <li style="color:white">{{this}}</li>
            {{/each}}</td>
            <td class= {{day5Color}}>{{#each day5}}
            <li style="color:white">{{this}}</li>
            {{/each}}</td>
            <td class= {{day6Color}}>{{#each day6}}
            <li style="color:white">{{this}}</li>
            {{/each}}</td>
            <td class= {{day7Color}}>{{#each day7}}
            <li style="color:white">{{this}}</li>
            {{/each}}</td>
          </tr>
        </tbody>
      </table>
    </div>
  </form>
  <br>
  <hr>
  <h4 style="color:#005960">THANK YOU FOR YOUR DAYS</h4>
  <hr>
  </body>
</html>
